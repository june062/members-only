<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
  </head>
  <body>
    <h1>Homepage</h1>
    <a href="/login">Log in</a>
    <a href="/signup">Sign up</a>
    <a href="/createMessage">Create Message</a>
    <%if(locals.user){%>
      <p><%=user.username%> is logged in</p>
      <a href="/logout">Log out</a>
      <%}%>
      <%if(locals.user.admin){%>
        <p>Admin specific data</p>
        <%}%>
      <%if(locals.user.member){%>
        <p>Member specific data</p>
        <%}%>
      <%if(!locals.user){%>
        <p>Guest specific data</p>
        <%}%>
   <ul>

        <% for(let i = 0; i < locals.messages.length; i++){%>
        <li>
          <%=locals.messages[i].message_user %>
          <button><a href="/message/<%=locals.messages[i].id%>">view</a></li>
          </button>
        <ul>
          <%for(const prop in locals.messages[i]){%>
          <li><%=prop%> : <%=locals.messages[i][prop]%></li>
          <%}%>
        </ul>
        <%}%>
      </ul> 
  </body>
</html>
